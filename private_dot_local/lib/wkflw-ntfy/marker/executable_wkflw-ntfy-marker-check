#!/usr/bin/env bash
# wkflw-ntfy-marker-check: Check if marker file exists
#
# Usage: wkflw-ntfy-marker-check <session-id>
#
# Exit codes:
# - 0: Marker exists
# - 1: Marker does not exist

set -euo pipefail

# Load config
# Resolve symlinks to find actual script location
SCRIPT_PATH="${BASH_SOURCE[0]}"
while [ -L "$SCRIPT_PATH" ]; do
    SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"
    SCRIPT_PATH="$(readlink "$SCRIPT_PATH")"
    [[ "$SCRIPT_PATH" != /* ]] && SCRIPT_PATH="$SCRIPT_DIR/$SCRIPT_PATH"
done
SCRIPT_DIR="$(cd "$(dirname "$SCRIPT_PATH")" && pwd)"

# shellcheck disable=SC1091  # Config path is dynamic (resolved from symlink)
source "$SCRIPT_DIR/../core/wkflw-ntfy-config"

session_id="${1:-}"

if [[ -z "$session_id" ]]; then
    echo "Usage: wkflw-ntfy-marker-check <session-id>" >&2
    exit 1
fi

# Construct marker path from session ID
marker_file="$WKFLW_NTFY_STATE_DIR/markers/${session_id}"

if [[ -f "$marker_file" ]]; then
    exit 0
else
    exit 1
fi
