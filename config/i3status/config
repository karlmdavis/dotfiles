# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5

        # This snippet is taken from
        # <https://github.com/Eluminae/base16-i3status/blob/master/colors/base16-material.config>.
        color_good = "#C3E88D"
        color_bad = "#F07178"
        color_degraded = "#FFCB6B"
}

#order += "ipv6"
order += "wireless _first_"
#order += "ethernet _first_"
order += "load"
order += "cpu_temperature 0"
order += "battery all"
order += "disk /"
order += "memory"
order += "volume master"
order += "tztime local"

#ipv6 {
#        format_up = "IPv6: %ip"
#        format_down = "IPv6: no"
#}

wireless _first_ {
        format_up = "WiFi: (%quality at %essid) %ip"
        format_down = "W: down"
}

#ethernet _first_ {
#        format_up = "Ethernet: %ip (%speed)"
#        format_down = "Ethernet: down"
#}

load {
        format = "CPU 1min Load: %1min"
}

cpu_temperature 0 {
        format = "CPU Temp: %degrees °C"
        max_threshold = "60"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
}

battery all {
        #format = "Battery: %status %percentage %remaining"
        format = "Battery: %percentage (%remaining hours)"
}

disk "/" {
        format = "Disk '/': %avail"
}

memory {
        format = "Memory: %used used, %available available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

volume master {
        format = "Volume: %volume"
        format_muted = "Volume: % volume (muted)"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
