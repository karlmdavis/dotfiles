{
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "UserPromptSubmit": {
      "command": "{{ .chezmoi.homeDir }}/.local/bin/ntfy-claude-hook-user-prompt-submit.sh",
      "args": ["${session_id}"]
    },
    "Stop": {
      "command": "{{ .chezmoi.homeDir }}/.local/bin/ntfy-claude-hook-stop.sh",
      "args": ["${session_id}", "${cwd}"]
    }
  },
  "permissions": {
    "allow": [
      {{/* === Git Operations === */ -}}
      "Bash(git add:*)",
      "Bash(git rm:*)",
      "Bash(git log:*)",
      "Bash(git ls-tree:*)",
      "Bash(git remote get-url:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git commit:*)",

      {{/* === GitHub CLI === */ -}}
      "Bash(gh pr list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr ready:*)",
      "Bash(gh pr create:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh workflow:*)",
      "Bash(gh issue:*)",

      {{/* === Common Unix Utilities === */ -}}
      "Bash(mkdir:*)",
      "Bash(jq:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(awk:*)",
      "Bash(tee:*)",
      "Bash(sed:*)",
      "Bash(cp:*)",
      "Bash(ping:*)",
      "Bash(xargs cat:*)",
      "Bash(xargs jq:*)",
      "Bash(yq:*)",

      {{/* === Development Tools - Rust === */ -}}
      "Bash(cargo:*)",
      "Bash(rustc:*)",

      {{/* === Development Tools - Python === */ -}}
      "Bash(uv sync:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run black:*)",
      "Bash(uv run ruff check:*)",
      "Bash(uv run mypy:*)",

      {{/* === Development Tools - Node/JavaScript === */ -}}
      "Bash(npm test:*)",
      "Bash(npm run type-check:*)",
      "Bash(npx tsc:*)",
      "Bash(bun:*)",

      {{/* === Data/CSV Tools === */ -}}
      "Bash(csvcut:*)",
      "Bash(unzip -l:*)",
      "Bash(unzip -p:*)",

      {{/* === DevOps/Infrastructure === */ -}}
      "Bash(ansible-doc:*)",
      "Bash(yamllint:*)",
      "Bash(aws ec2 describe-instances:*)",
      "Bash(aws ec2 describe-security-groups:*)",
      "Bash(aws ec2 get-console-output:*)",
      "Bash(aws ec2 describe-instance-status:*)",
      "Bash(aws ec2 describe-instance-attribute:*)",

      {{/* === Mobile/Platform Tools === */ -}}
      "Bash(xcrun simctl:*)",
      "Bash(lcov:*)",

      {{/* === Web Access === */ -}}
      "WebSearch",
      "WebFetch(domain:docs.helix-editor.com)",
      "WebFetch(domain:openapi-generator.tech)",
      "WebFetch(domain:crates.io)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:release-assets.githubusercontent.com)",
      "WebFetch(domain:packages.ubuntu.com)",
      "WebFetch(domain:app.codecov.io)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:bun.sh)",

      {{/* === Superpowers Skills === */ -}}
      "Skill(superpowers:*)",

      {{/* === Slash Commands === */ -}}
      "SlashCommand(/pr-quality-loop)",
      "SlashCommand(/pr-merge)",

      {{/* === MCP Tools === */ -}}
      "mcp__ide__getDiagnostics",

      {{/* === Global Command Access === */ -}}
      "Read(//{{ .chezmoi.homeDir }}/.claude/commands/**)",
      "Read(//{{ .chezmoi.homeDir }}/.config/superpowers/skills/skills/collaboration/brainstorming/**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/credentials.json)",
      "Read(**/.aws/credentials)",
      "Read(**/.ssh/id_*)"
    ]
  }
}
